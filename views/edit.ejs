<h2>Update Campgrounds</h2>

<form action="/campgrounds/<%= campground.id %>/?_method=PUT" method="post">
  <div class="form-group">
    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" >
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>">
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="description" id="campground[description]" value="<%= campground.description %>" >
  </div>
  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
  </div>
</form>