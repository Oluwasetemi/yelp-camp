<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <div class="col-md-3 pt-4">
        <p class="lead">side bar</p>
        <div class="list-group">
          <li class="list-group-item active">list 1</li>
          <li class="list-group-item">list 2</li>
          <li class="list-group-item">list 3</li>
        </div>
      </div>
      <div class="col-md-9 pt-4">
        <div class="card">
          <img class="card-img-top" src="<%= campground.image %>" alt="campground">
          <div class="card-body">
            <h1 class="card-title">
              <%= campground.name %>
            </h1>
            <h4 class="text-right">
              $<%= campground.price %>/night
            </h4>

            <p class="card-text">
              <%= campground.description %>
            </p>
            <p class="card-text">
              <em>Submitted By
                <%= campground.author.username %>
              </em>
            </p>
            <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
            <a class="btn btn-ex btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
            <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">Delete</button>
            </form>
            <% } %>
          </div>
        </div>
        <div class="card mt-4">
          <div class="card-body">
            <div class="text-right">
              <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
            </div>
            <hr>
            <% campground.comments.forEach((comment) => { %>
              <div class="row">
                <div class="col-md-12">
                  <%= comment.author.username %>
                    <p class="text-right">10 days ago</p>
                    <p>
                      <%= comment.text %>
                    </p>
                    <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                    <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
                    <form id="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                      <input type="submit" class="btn btn-xs btn-danger" value="Delete"></input>
                    </form>
                    <% } %>
                </div>
              </div>
              <%  }) %>

          </div>
        </div>
      </div>

    </div>



    <% include ../partials/footer %>