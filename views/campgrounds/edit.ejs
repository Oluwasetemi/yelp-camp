<% include ../partials/header %>

  <div class="container">
    <h1 style="text-align: center">Edit a Campground</h1>
    <div class="row">

      <div style="width: 30%; margin: 20px auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" id="name" placeholder="Enter the camp Name" value="<%= campground.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" id="price" min="0.01" step="0.01" value="<%= campground.price %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="file" name="image" id="image" placeholder="Enter the image link" accept="image/*" value="<%= campground.imageId %>.jpg">
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" id="description" placeholder="Enter the description of the camp" value="<%= campground.description %>">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
          </div>
        </form>
        <a href="/campgrounds">Go Back</a>
      </div>
    </div>
  </div>

<% include ../partials/footer %>