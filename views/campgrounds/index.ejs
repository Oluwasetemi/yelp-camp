<% include ../partials/header %>

  <% if(currentUser && currentUser.isAdmin) { %> 
    <h1>Welcome Administrator</h1>
  <% } %>


  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Campgrounds</h1>
        <p class="lead">Welcome to my yelp camp project and view my hand picked camp from around the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
        </p>

        
      </div>
    </header>

    <div class="row">
      <div class="col-lg-12">
        <h3>Our most popular Campgrounds</h3>
      </div>
    </div>

    <div class="row mb-5">
      <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6">
          <div class="card">
            <img class="card-img-top" src="<%= campground.image %>" alt="campground-image">
            <h4 class="card-title pl-5">
              <%= campground.name %>
            </h4>
            <p class="pl-5">
              <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Show More</a>
            </p>
          </div>
        </div>
        <% }) %>
    </div>

  </div>

  <% include ../partials/footer %>