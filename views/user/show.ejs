<% include ../partials/header %>

<!-- <p><%= user.firstName %>  <%= user.lastName %></p>
  <img src=<%= user.avatar %>?s=300 alt="<%= user.username %>">
  <pre><%= dump(user) %></pre> -->
  
  <div class="container">
    <h2><%= user.username.toUpperCase() %>'s Profile</h2>
    <div class="row">
    <div class="col-4">
      <div class="card border-primary mb-3">
        <div class="card-header">
          <%= user.firstName %>  <%= user.lastName %>
        </div>
        <img src=<%= user.avatar %>?s=300 alt=<%= user.username %> class="card-img-top rounded-circle">
        <div class="card-body">
          <h4 class="card-title">username: <strong><%= user.username %></strong></h4>
          <p class="card-text"><strong>email: </strong><a href="mailto:<%= user.email %>"><%= user.email %></a></p>
        </div>
      </div>
    </div>
    <div class="col-8">
      <h2><%= user.username %>'s campgrounds</h2>
      <ul>
        <% campgrounds.forEach(campground => { %>
          <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
        <% }) %> 
      </ul>
    </div>
  </div>
</div>
<% include ../partials/footer %>