<% include partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Campgrounds</h1>
        <p class="lead">Welcome to my yelp camp project and view my hand picked camp from around the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
        </p> 
      </div>
    </header>



    <% campgrounds.forEach((campground) => { %>
      <div>
        <h4>
          <%= campground.name %>
        </h4>
        <img src="<%= campground.image %>" alt="campground-image">
      </div>
      <% }) %>
  </div>

  <% include partials/footer %>